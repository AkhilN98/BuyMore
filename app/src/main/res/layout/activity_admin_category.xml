<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/Category_Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Add New Products"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Category_Admin"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tShirts_Img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/tshirts" />
        <ImageView
            android:id="@+id/sports_tShirts_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports"/>
        <ImageView
            android:id="@+id/female_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/female_dresses"/>
        <ImageView
            android:id="@+id/sweater_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sweather"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1_category"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/glasses" />
        <ImageView
            android:id="@+id/purses_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/purses_bags"/>

        <ImageView
            android:id="@+id/hats_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hats" />

        <ImageView
            android:id="@+id/shoes_img"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/shoess" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear2_category"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/headphones_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/headphoness" />
        <ImageView
            android:id="@+id/laptops_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/laptops"/>

        <ImageView
            android:id="@+id/mobile_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mobiles" />

        <ImageView
            android:id="@+id/watch_img"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/watches" />

    </LinearLayout>
</RelativeLayout>